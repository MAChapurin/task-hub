generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(cuid())
  login        String
  passwordHash String
  salt         String @default("")
  email        String @unique
  // avatarUrl    String?
